<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.video_trainer_app">

    <!-- ✅ صلاحية الإنترنت في المكان الصحيح -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="video_trainer_app"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            
            <!-- هذا الفلتر لتشغيل التطبيق كالتطبيق الرئيسي -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- ✅ فلتر الـ Deep Link للتعامل مع رابط المصادقة، في المكان الصحيح -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- 
                    تأكد من أن هذا يطابق إعداداتك في Supabase.
                    scheme = "app"
                    host = "com.example.video_trainer_app"
                 -->
                <data android:scheme="app" android:host="com.example.video_trainer_app" />
            </intent-filter>

            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
        </activity>
        
        <!-- لا تحذف هذا الوسم -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- وسم الـ queries يبقى في مكانه خارج وسم الـ application -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>